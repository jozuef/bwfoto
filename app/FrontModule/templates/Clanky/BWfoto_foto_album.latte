 * @param string  $h2 Nadpis
 * @param int     $uroven Uroven menu
 * @param string  $avatar_path  cestak obrazku
 * @param string  $viac_info  Nadpis menu
 * @param boolean $clanok_view  Zobrazenie
 * @param array   $komponenty Komponenty pod clankom
 * @param boolean $komentare_povolene Povolenie komentarov
*}
{var $uroven_aside = $uroven > 2 ? $uroven - 1 : 2}
{block title}{$h2}{/block}

{block content}
<div id="uvodnyText">
  {control ukazTentoClanok}
</div>
<div n:snippet=bigimgContainer class="nittro-transition-auto nittro-transition-fade" n:if="$prilohy->count()">
  <h4 class="bigimg-name" n:ifset="$big_img->name">{$big_img->name}</h4>
  <section id="webThumbnails">
    <div class="detail">
      {foreach $prilohy_for_big_img as $subor}
        {* Nasledujuca dva riadky su z dovodu nekompatibility medzi dokumentami a produktmi - TODO *}
        {var $main_file = isset($subor->subor)? $subor->subor : $subor->main_file}
        {var $thumb_file = isset($subor->thumb)? $subor->thumb : $subor->thumb_file}
        <div class="big-img-container" {if $subor->id != $big_img->id}style="display:none"{/if}>
            {if $subor->id == $big_img->id}
              <img class="big-img noajax" src="{$basePath}/{$main_file}" alt="{$subor->name}" data-jslghtbx="{$basePath}/{$main_file}" data-ajax="false" data-jslghtbx-caption="{$subor->description}" data-jslghtbx-group="bigimggroup1" data-id-priloha="{$subor->id}">
              {*<div class="border-c" {ifset $clanok_hl_menu->border_c}{$clanok_hl_menu->border_c|border_x|noescape}{/ifset}>
                <div class="border-b" {ifset $clanok_hl_menu->border_b}{$clanok_hl_menu->border_b|border_x|noescape}{/ifset}>
                  <div class="border-a" {ifset $clanok_hl_menu->border_a}{$clanok_hl_menu->border_a|border_x|noescape}{/ifset}>
                    <img class="big-img noajax" src="{$basePath}/{$main_file}" alt="{$subor->nazov}" data-jslghtbx="{$basePath}/{$main_file}" data-ajax="false" data-jslghtbx-caption="{$subor->description}" data-jslghtbx-group="bigimggroup1" data-id-priloha="{$subor->id}">
                  </div>
                </div>
              </div>*}
            {else}
              <img class="small-img noajax img-thumbnail img-rounded" style="display:none" src="{$basePath}/{$thumb_file}" alt="{$subor->name}" data-jslghtbx="{$basePath}/{$main_file}" data-ajax="false" data-jslghtbx-caption="{$subor->description}" data-jslghtbx-group="bigimggroup1">
            {/if}
        </div>
      {/foreach}
      <script>
        var options = {
          prevImg: 			true,
          nextImg: 			true,
          hideCloseBtn: 		false,
          hideEshopBtn:     true,
          closeOnClick: 		true,
          carousel: 			true,
          animation: 			400,
          nextOnClick: 		true,
          responsive: 		true,
          maxImgSize:			0.8,
          keyControls: 		true,
          border_a_width: {$clanok_hl_menu->border_a|border_width|noescape},
          border_a_color: '{$clanok_hl_menu->border_a|border_color|noescape}',
          border_b_width: {$clanok_hl_menu->border_b|border_width|noescape},
          border_b_color: '{$clanok_hl_menu->border_b|border_color|noescape}',
          border_c_width: {$clanok_hl_menu->border_c|border_width|noescape},
          border_c_color: '{$clanok_hl_menu->border_c|border_color|noescape}'
        };
        var lightbox = new Lightbox();
        lightbox.load(options);
      </script>
    </div>

    <div class="thumbnails" data-transition="false" n:snippet="prilohyClanok" n:if="$prilohy->count()">
      {control menu templateType=>'single', templateFile=>$clanok_hl_menu->hlavne_menu_template->name, cast=>$clanok_hl_menu->id_hlavne_menu_cast, level => $uroven, avatar => $avatar_path, article_avatar_view_in => TRUE, anotacia => TRUE, nadpis => $viac_info}
      {foreach $prilohy as $subor}
        {var $pr = strtolower($subor->pripona)}
        {if $pr == "mp4" OR $pr == "ogv" OR $pr == "webm" OR $pr == "wmv"}
          <div class="thumb video">
            <a href="#">
              <img src="{$basePath}/{$subor->thumb}" alt="" class="img-responsive img-square"/>
              <img src="{$basePath}/www/images/icons/play-arrow_200.png" alt="" class="img-responsive img-square img-play"/>
            </a>
          </div>
          {* <video class="video-priloha" width="320" height="180" src="{$basePath}/{$subor->subor}" type="video/mp4" controls="controls" preload="none"></video>*}
        {* else}
          {if $pr == "mp3" OR $pr == "wav"}
            <div class="col-12 col-md-4 foto-album-audio">
              <div class="thumbnail" n:tag-if="FALSE">
                <audio src="{$basePath}/{$subor->subor}" width="320" type="audio/mp3" controls="controls" preload="none"></audio>
                <div>
                  <strong>{$subor->nazov}</strong>
                  <div n:ifset="$subor->description" class="popis">{$subor->description}</div>
                </div>
              </div>
            </div>
          {/if *}
        {/if}
      {/foreach}
      {var $big_img_id = isset($big_img->id) ? $big_img->id : 0}
      {control prilohy:others templateFile=>$clanok_hl_menu->hlavne_menu_template->name}
      {control prilohy:images templateFile=>$clanok_hl_menu->hlavne_menu_template->name, big_img_id=>$big_img_id}
      {control viewProducts templateFile=>$clanok_hl_menu->hlavne_menu_template->name, big_img_id=>$big_img_id}
    </div>  
  </section>
  <div class="bigimg-description" n:ifset="$big_img->description">{$big_img->description}</div>
</div>
