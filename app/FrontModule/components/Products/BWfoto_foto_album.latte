<div n:if="$products->count()" n:foreach="$products as $product" class="thumb">
  <img class="img-thumbnail img-rounded jslghtbx-thmb" src="{$basePath}/{$product->thumb_file}" alt="{$product->name}" 
       data-jslghtbx="{$basePath}/{$product->main_file}" 
       data-jslghtbx-caption="{$product->description}">
  <a href="{plink bigImg! $product->id, 1}" title="{$product->name}" class="ajax small-img{if $product->id == $big_img_id} selected{/if}">
    <img class="img-responsive img-square" src="{$basePath}/{$product->thumb_file}" alt="{$product->name}">
  </a>
</div>