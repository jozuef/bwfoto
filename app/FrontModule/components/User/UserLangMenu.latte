<div n:if="count($menu_user)" class="user-panel btn-group btn-group-sm text-center" role="group" aria-label="userLangMenu" n:inner-foreach="$menu_user as $mu" {* n:snippet="userLangMenu" *}>
  <a href="{ifset $mu->abs_link}{$mu->abs_link}{else}{if is_array($mu->odkaz)}{plink $mu->odkaz[0], $mu->odkaz[1]['meno']=>$mu->odkaz[1]['obsah']}{else}{plink $mu->odkaz}{/if}{/ifset}"
     type="button"
     title="{$mu->title}" 
     class="btn {if strlen($mu->class)}{$mu->class}{/if}" 
     {if strlen($mu->target)}target="{$mu->target}"{/if}
     {if $mu->data['name'] != ''}data-{$mu->data['name']}="{$mu->data['value']}"{/if}>
    <i n:if="isset($mu->ikonka)" class="{$mu->ikonka}"></i> {$mu->nazov|noescape}
  </a>
</div>